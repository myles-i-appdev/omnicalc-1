<form action="/payment/results">
    <div>
        <label for="apr">
            APR
        </label>
        <input id="apr", type="text", placeholder="Eg. 5.42", name="apr"> 
    </div>

    <div>
        <label for="num_years">
            Number of years
        </label>
        <input id="num_years", type="text", placeholder="How many years to repay?", name="num_years"> 
    </div>

    <div>
        <label for="principal">
            Principal
        </label>
        <input id="principal", type="text", placeholder="How much principal?", name="principal"> 
    </div>

    <button> Calculate monthly payment</button>
    
    
</form>